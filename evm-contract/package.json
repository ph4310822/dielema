{
  "name": "dielemma-evm-contract",
  "version": "1.0.0",
  "description": "Dielemma smart contract for EVM chains (BSC, Ethereum, Polygon, etc.)",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:bsc:testnet": "hardhat run scripts/deploy-bsc-testnet.ts --network bscTestnet",
    "deploy:bsc:mainnet": "hardhat run scripts/deploy-bsc-mainnet.ts --network bsc",
    "deploy:sepolia": "hardhat run scripts/deploy-sepolia.ts --network sepolia",
    "deploy:polygon:amoy": "hardhat run scripts/deploy-polygon-amoy.ts --network polygonAmoy",
    "deploy:arbitrum:sepolia": "hardhat run scripts/deploy-arbitrum-sepolia.ts --network arbitrumSepolia",
    "deploy:base:sepolia": "hardhat run scripts/deploy-base-sepolia.ts --network baseSepolia",
    "verify:bsc:testnet": "hardhat verify --network bscTestnet",
    "verify:bsc:mainnet": "hardhat verify --network bsc",
    "node": "hardhat node",
    "clean": "hardhat clean"
  },
  "keywords": [
    "dielemma",
    "solidity",
    "bsc",
    "binance",
    "ethereum",
    "polygon",
    "evm",
    "smart-contract"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.5",
    "chai": "^4.5.0",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.7",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.2"
  }
}
